@model MyCoffeeShop.Models.Coffee

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Coffee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CoffeeID" />
            <div class="form-group">
                <label asp-for="CoffeeName" class="control-label"></label>
                <input asp-for="CoffeeName" class="form-control" />
                <span asp-validation-for="CoffeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableDate" class="control-label"></label>
                <input asp-for="AvailableDate" class="form-control" />
                <span asp-validation-for="AvailableDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

